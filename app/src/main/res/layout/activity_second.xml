<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Select Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIcon" />

    <Button
        android:id="@+id/btnalertOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Alert First"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddImage" />

    <Button
        android:id="@+id/btnalertTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Alert Two"
        app:layout_constraintEnd_toEndOf="@+id/btnalertOne"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/btnalertOne"
        app:layout_constraintTop_toBottomOf="@+id/btnalertOne" />

    <Button
        android:id="@+id/btnalertThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Alert Three"
        app:layout_constraintEnd_toEndOf="@+id/btnalertTwo"
        app:layout_constraintStart_toStartOf="@+id/btnalertTwo"
        app:layout_constraintTop_toBottomOf="@+id/btnalertTwo" />

    <Spinner
        android:id="@+id/spAnime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/anime"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/btnalertThree"
        app:layout_constraintStart_toStartOf="@+id/btnalertThree"
        app:layout_constraintTop_toBottomOf="@+id/btnalertThree" />
</androidx.constraintlayout.widget.ConstraintLayout>